<h1 class="mt-0">Đăng Nhập</h1>
<div class="we-login-register"> 
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="f-email ">
                <label for="email" class="label-group">Email của bạn</label> 
                <%= f.text_field :email, autofocus: true, autocomplete: "email" , placeholder: 'Your email' %>
                <p class="reset-magin error-mes">.</p>
        </div>

    
        <div class="f-pass">
                <label for="password" class="label-group">Mật khẩu</label> 
                <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' %> 
                <p class="reset-magin error-mes">.</p><br>
        </div>
          
        <% if devise_mapping.rememberable? %>
        
            <div class="form-group form-check">
                <%= f.check_box :remember_me, class: "form-check-input " %>
                
                <label class="form-check-label mx-2" for="exampleCheck1">Remeber me</label>
            </div>
                               
        <% end %>
        <div class="actions">
            <button type="submit" class="btn-submit" data-ripple="">Đăng Nhập</button>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
    
    <div class="text-center my-3"> 
        <span class="text-center "> OR </span>
    </div>
    <div class="text-center">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
             <%= link_to "Đăng ký tại đây !", new_registration_path(resource_name), class: "btn w-75 btn-success" %><br />
        <% end %>
    </div>
    
</div>
