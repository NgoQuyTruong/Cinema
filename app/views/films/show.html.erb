<section class="container">
            <div class="col-sm-8 col-md-9">
                <div class="movie" data-phim="<%= @film.id %>">
                    <h2 class="page-heading p-0 text-uppercase font-weight-bold "><i class="fas fa-film mr-3"></i><%= @film.name %></h2>
                    
                    <div class="movie__info">
                        <div class="col-sm-6 col-md-4 movie-mobile">
                            <div class="movie__images">
                                <span class="movie__rating">5.0</span>
                                <img alt='' src="<%= @film.image_url %>" style = "height:350px;width:400px">
                            </div>
                        </div>

                        <div class="col-sm-6 col-md-8">
                                <p class="movie__time"><%= @film.time %></p>

                                <p class="movie__option"><strong>Quốc gia: </strong><%= @film.country %></p>
                                <p class="movie__option"><strong>Thể loại: </strong><%= @film.film_type.name %></p>
                                <p class="movie__option"><strong>Ngày công chiếu: </strong><%= @film.release_date %></p>
                                <p class="movie__option"><strong>Đạo diễn: </strong><%= @film.director %></p>
                                <p class="movie__option"><strong>Diễn viên: </strong><%= @film.actors %></p>
                                <p class="movie__option"><strong>Giới hạn độ tuổi: </strong>PHIM CẤM KHÁN GIẢ DƯỚI <%= @film.age_limit %> TUỔI</p>

                            <a href="#" class="comment-link">Comments:  15</a>
                            <div class="social social--hide" style="margin-top:30px;">
                                <span class="social__name">Share:</span>
                                <a href="#" class="social__variant social--first fa fa-facebook"></a>
                                <a href="#" class="social__variant social--second fa fa-twitter"></a>
                                <a href="#" class="social__variant social--third fa fa-vk"></a>
                            </div>
                            <div class="movie__btns">
                                <a href="#" class="watchlist">Thêm vào danh sách yêu thích</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="clearfix"></div>
                    
                    <h2 class="page-heading p-0 text-uppercase font-weight-bold"><i class="fas fa-file-alt mr-2"></i>Review</h2>

                    <p class="movie__describe"><%= @film.plot %> </p>


                </div>

                <h2 class="page-heading text-uppercase font-weight-bold p-0"><i class="fas fa-ticket-alt"></i> Suất chiếu</h2>
                <div>
                   
                    
                    <!-- hiden maps with multiple locator-->
                    <section class="container pt-5">
                                <div class="order-step-area">
                                    <div class="order-step first--step">1. Chọn suất chiếu</div>
                                </div>

                    </section>
                        
                    <section class="container">
                        <div class="col-sm-12">

                            <div class="col-sm-8 col-md-9">
                                    <h2 class="page-heading p-0 text-uppercase font-weight-bold "><i class="fas fa-film mr-3"></i>Suất chiếu trong tuần</h2>
                                        <div id="showtimes"><div class="showtimes">
                                            <div class="btn-group btn-block showtime-dates mb-3 d-lg-inline-flex" id="dates" style="position: relative;vertical-align: middle;">
                                                    <% 7.times do |day| %>
                                                            <a class="btn btn-light text-muted  day_show_film <%= ((Time.now.to_date+day).strftime("%d/%m") == (Time.now.to_date).strftime("%d/%m"))? "active" : "" %>" data-date="<%= (Time.now.to_date+day).strftime("%d/%m/%Y")%>">
                                                                <%= (Time.now.to_date+day).strftime("%d/%m")%>
                                                                <br><span class="small text-nowrap"><%= (Time.now.to_date+day).strftime("%a")%></span>
                                                            </a>
                                                    <% end %>
                                            </div>
                                            <div class="card card-sm">
                                                <% if @screenings %>
                                                    <div class="time-select card-body" id = "show_screen_of_film">
                                                        <%= render partial: "screen/filter_screen" %>
                                                    </div>
                                                <% else %>
                                                    <div class="card-body">
                                                            Chưa có lịch chiếu cho ngày này. Hãy quay lại sau. Xin cám ơn.
                                                    </div>
                                                <% end %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            
                        </div>

                    </section>
                    <div class="clearfix"></div>
                    <form id='film-and-time' class="booking-form" method='get' action='book_a_seat'>
                        <input type='text' name='choosen-movie' class="choosen-movie">

                        <input type='text' name='choosen-city' class="choosen-city">
                        <input type='text' name='choosen-date' class="choosen-date">
                        
                        <input type='text' name='choosen-cinema' class="choosen-cinema">
                        <input type='text' name='choosen-time' class="choosen-time">


                        <div class="booking-pagination">
